""" Key maps
" Leader
let mapleader=","

" Disable arrows
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
" Move between windows
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
" Esc
inoremap jj <Esc>
vnoremap v <Esc>

" Support for vim-sorround
set surround
